							"notebookPath": "/Users/jzbgfeng@gmail.com/electroniz_curation_notebook",
							"baseParameters": {
								"STORAGE_ACCOUNT": {
									"value": "@pipeline().parameters.STORAGE_ACCOUNT",
									"type": "Expression"
								},
